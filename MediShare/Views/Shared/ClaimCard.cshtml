@model MediShare.Models.Claimer

<form asp-action="ClaimMedicine">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MedicineId" class="control-label"></label>
        <input asp-for="MedicineId" class="form-control" />
        <span asp-validation-for="MedicineId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Purpose" class="control-label"></label>
        <input asp-for="Purpose" class="form-control" />
        <span asp-validation-for="Purpose" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingAddress" class="control-label"></label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Claim Medicine" class="btn btn-info" />
    </div>
</form>