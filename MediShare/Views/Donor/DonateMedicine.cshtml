@model MediShare.ViewModels.DonorMedicineVM

@{
    ViewData["Title"] = "DonateMedicine";
}
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 h-25" src="https://as2.ftcdn.net/v2/jpg/01/04/50/13/1000_F_104501389_hdwiFo9z6vsxicyyYr8STvYgVh33OjVw.jpg" alt="First slide">
        </div>
    </div>
</div>

<section class="h-100 h-custom" style="background-color:white">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <div class="card-body p-4 p-md-5">
                        <h4 class="mb-4 display-8 text-center">Enter Details to Donate Medicine</h4>
                        <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle">
                        <form asp-action="DonateMedicine">
                            <div class="form-group">
                                <label asp-for="MedicineName" class="control-label"></label>
                                <select asp-items="@ViewBag.Items as List<SelectListItem>" asp-for="MedicineId"></select>
                                <span asp-validation-for="MedicineName" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <label asp-for="Quantity" class="control-label"></label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Expiry_Date" class="control-label"></label>
                                <input asp-for="Expiry_Date" class="form-control" />
                                <span asp-validation-for="Expiry_Date" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Donate" class="btn btn-info" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>